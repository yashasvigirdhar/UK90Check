{
  "manifest_version": 3,
  "name": "UK90Check - Track Your 90-Day Rule for UK Citizenship",
  "version": "1.1",
  "description": "Track your out-of-the-UK days before applying for the UK citizenship",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 